{
  "name": "library-system-backend",
  "version": "1.0.0",
  "description": "Backend API for Library System Application",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "lint": "eslint",
    "build:clean": "rm -rf ./dist && mkdir -p ./dist/logs",
    "build:config": "cp ./src/config/config.js ./dist/config.js && cp ./package.json ./dist/package.json",
    "build": "npm run build:clean && npm run build:config && cp -R ./src ./dist/src"
  },
  "keywords": [
    "library",
    "books",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.0"
  },
  "devDependencies": {
    "eslint": "^9.39.1",
    "globals": "^16.5.0"
  }
}
